<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hydrobuddy.gui.MainViewController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20">

    <Label text="HydroBuddy" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Remind me every:"/>

        <Label fx:id="intervalLabel" text="30 Minutes" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="startButton" text="Start"/>
        <Button fx:id="stopButton" text="Stop"/>
    </HBox>

    <Label fx:id="statusLabel" text="Status: Not running" style="-fx-text-fill: grey"/>

</VBox>
